@model Portfolio.Models.HomeIndexVM
@{
    ViewData["Title"] = "Portfolio – Harot Aziz";
}

<!-- =========================
     HERO (centrerad som i exemplet)
========================= -->
<section class="hero">
    <div class="container" style="text-align:center">
        <div class="reveal">
            <span class="eyebrow">
                <span class="dot" aria-hidden="true"></span>
                Välkommen hit
            </span>
        </div>

        <h1 class="hero-title reveal">Hej, jag är Harot Aziz</h1>
        <p class="hero-role reveal">Fullstack .NET-utvecklare</p>
        <p class="hero-sub reveal" style="margin-inline:auto">
            Jag bygger moderna, användarvänliga och snabba webblösningar – från C#/ASP.NET&nbsp;Core i backend till
            smidiga gränssnitt i JavaScript.
        </p>

        <div class="hero-cta reveal" style="justify-content:center">
            <a href="#contact" class="btn magnet">Kontakta mig</a>
            <a href="/Harot_Aziz_CV.pdf" class="btn-outline">Ladda ner CV</a>
        </div>

        <canvas id="heroCanvas" aria-hidden="true"></canvas>
    </div>
</section>

<!-- =========================
     ABOUT (endast text – inga “stats”)
========================= -->
<section id="about" class="section alt" aria-labelledby="about-title">
    <div class="container">
        <h2 id="about-title" class="reveal" style="text-align:center">About Me</h2>

        <p class="reveal" style="max-width:72ch;margin-inline:auto;text-align:center">
            Mitt intresse för teknik började när jag var liten och jag ville alltid förstå vad som händer bakom skärmen.
            Idag är jag utbildad <strong>fullstack-utvecklare inom .NET</strong> med fokus på
            <strong>C#/ASP.NET&nbsp;Core</strong> och moderna <strong>JavaScript-lösningar</strong>.
            Jag gillar tydliga gränssnitt, mjuka animationer och att hela tiden hitta bättre lösningar – både i
            <em>design</em> och <em>system</em>.
            Här hittar du några av projekten jag gjorde under utbildningen och andra egna projekt.
        </p>
    </div>
</section>

<!-- =========================
     PROJECTS (kort med fade/stagger)
========================= -->
<section id="projects" class="section" aria-labelledby="projects-title">
    <div class="container">
        <h2 id="projects-title" class="reveal" style="text-align:center">My Projects</h2>

        <div class="grid">
            @foreach (var p in Model.Projects)
            {
                <a class="card tilt reveal" asp-controller="Home" asp-action="Project" asp-route-slug="@p.Slug" aria-label="@p.Title">
                    <h3>@p.Title</h3>

                    @if (!string.IsNullOrWhiteSpace(p.Summary))
                    {
                        <p>@p.Summary</p>
                    }

                    @if (p.Techs != null && p.Techs.Any())
                    {
                        <div class="chips" aria-label="Tekniker">
                            @foreach (var t in p.Techs.Take(4))
                            {
                                <span>@t</span>
                            }
                        </div>
                    }
                </a>
            }
        </div>
    </div>
</section>

<!-- =========================
     SKILLS (ikonrutor som i videon)
========================= -->
<section id="skills" class="section alt" aria-labelledby="skills-title">
    <div class="container">
        <h2 id="skills-title" class="reveal" style="text-align:center">My Skills</h2>

        <div class="skills-grid">
            <div class="skill-card reveal">
                <div class="skill-ico">HTML5</div>
                <div class="skill-name">HTML</div>
            </div>
            <div class="skill-card reveal">
                <div class="skill-ico">CSS3</div>
                <div class="skill-name">CSS</div>
            </div>
            <div class="skill-card reveal">
                <div class="skill-ico">JS</div>
                <div class="skill-name">JavaScript</div>
            </div>
            <div class="skill-card reveal">
                <div class="skill-ico">.NET</div>
                <div class="skill-name">C# / ASP.NET Core</div>
            </div>
        </div>
    </div>
</section>

<!-- =========================
     CONTACT (modern, din e-post)
========================= -->
<section id="contact" class="section" aria-labelledby="contact-title">
    <div class="container">
        <h2 id="contact-title" class="reveal" style="text-align:center">Contact</h2>
        <p class="muted reveal" style="text-align:center;margin-top:4px">Hör av dig – jag svarar snabbt.</p>

        <form method="post" asp-action="Contact" class="contact-form form-card reveal" novalidate style="margin-inline:auto">
            <input type="text" name="company" tabindex="-1" autocomplete="off" class="hp" aria-hidden="true" />

            <div class="form-row">
                <div class="input-group">
                    <label for="name">Namn</label>
                    <input id="name" name="name" type="text" placeholder="Ditt namn" required />
                </div>
                <div class="input-group">
                    <label for="email">E-post</label>
                    <input id="email" name="email" type="email" placeholder="namn@exempel.se" required />
                </div>
            </div>

            <div class="input-group">
                <label for="message">Meddelande</label>
                <textarea id="message" name="message" rows="5" placeholder="Vad kan jag hjälpa till med?" required></textarea>
            </div>

            <div class="form-actions" style="justify-content:center">
                <button class="btn" type="submit">Skicka</button>
                <a class="btn-outline" href="mailto:harotehandel@gmail.com">Eller maila mig</a>
            </div>
        </form>

        <p class="muted" style="text-align:center;margin-top:10px">
            Direkt e-post: <a href="mailto:harotehandel@gmail.com">harotehandel@gmail.com</a>
        </p>
    </div>
</section>
