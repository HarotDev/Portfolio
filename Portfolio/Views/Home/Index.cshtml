    <div class="container">
        <h2 class="reveal">Vad jag har byggt</h2>

        @if (Model?.Projects is { Count: > 0 })
        {
            <div class="pc-grid">
                @foreach (var p in Model.Projects)
                {
                    var techs = (p.Techs ?? new List<string>());
                    var techShown = techs.Take(3).ToList();
                    var techMore = Math.Max(0, techs.Count - techShown.Count);
                    var href = Url.Action("Project", "Home", new { slug = p.Slug });

                    <article class="pcard tilt reveal">
                        <div class="pc-body">
                            <h3 class="pc-title">
                                <a href="@href" aria-label="@p.Title">@p.Title</a>
                            </h3>

                            @if (!string.IsNullOrWhiteSpace(p.Summary))
                            {
                                <p class="pc-summary">@p.Summary</p>
                            }

                            @if (techShown.Any())
                            {
                                <div class="pc-tech" aria-label="Teknik">
                                    @foreach (var t in techShown)
                                    {
                                        <span class="pc-pill">@t</span>
                                    }
                                    @if (techMore > 0)
                                    {
                                        <span class="pc-pill pc-more">+@techMore</span>
                                    }
                                </div>
                            }
                        </div>
                    </article>
                }
            </div>
        }
        else
        {
            <p class="muted">Inga projekt att visa just nu.</p>
        }
    </div>
</section>


