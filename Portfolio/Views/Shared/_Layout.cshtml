@{
    var pageTitle = ViewData["Title"] as string ?? "Harot Aziz – Portfolio";
}
<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@pageTitle</title>
    <meta name="description" content="Full-stack .NET-utvecklare. Portfölj, projekt och kontakt." />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@500&display=swap" rel="stylesheet" />

    <link rel="preload" href="~/assets/styles.css" as="style" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/styles.css" asp-append-version="true" />
    @RenderSection("Head", required: false)
</head>
<body>
    <div class="progress"><div class="progress__bar" id="progressBar"></div></div>

    <header class="nav" role="banner">
        <div class="container">
            <a class="logo" asp-controller="Home" asp-action="Index">Harot Aziz</a>

            <!-- Hamburger-->
            <button class="nav-toggle"
                    id="navToggle"
                    aria-label="Meny"
                    aria-controls="siteNav"
                    aria-expanded="false">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </button>

            <!-- Primary nav -->
            <nav id="siteNav" aria-label="Huvudmeny">
                <a href="#projects">Projekt</a>
                <a href="#experience">Erfarenhet</a>
                <a href="#contact" class="btn">Kontakt</a>
                <a href="#about">Om mig</a>
            </nav>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">© <span id="year"></span> Harot Aziz</div>
    </footer>

    <button class="backtotop" id="backToTop" aria-label="Till toppen" title="Till toppen">↑</button>
    <nav class="section-dots" aria-label="Sektioner">
        <button class="dot" data-target="#projects" title="Projekt"></button>
        <button class="dot" data-target="#experience" title="Erfarenhet"></button>
        <button class="dot" data-target="#about" title="Om mig"></button>
        <button class="dot" data-target="#contact" title="Kontakt"></button>
    </nav>

    <script src="~/assets/main.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
